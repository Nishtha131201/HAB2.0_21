<section id="notice" class="sectionlist" style="display: none">
  <div class="flex justify-center md:justify-between items-center">
    <div
      class="
        font-bold
        text-xl
        md:text-4xl md:ml-32
        my-4
        mt-10
        md:my-20
        flex
        justify-center
        md:justify-start
      "
    >
      Notices
    </div>
    <div class="hidden md:block mr-32 border-2 "> 
      <input type="text" placeholder="Search" class="focus:outline-none"> 
    </div>
  </div>
  <div class="mx-8 md:mx-32">
    <div class="flex flex-wrap justify-start">
      <% notices.forEach((notice,i)=>{ %>
      <div class="w-full sm:w-1/3 mb-4 mx-1 md:mx-4">
        <div class="w-full border-2 p-5">
          <div class="flex items-center justify-between">
            <div class="text-blue-600"><%= notice.category %></div>
            <div class="text-blue-600">
              <%=notice.creation.getDate()+'/'+(notice.creation.getMonth()+1)+'/'+notice.creation.getFullYear()
              %>
            </div>
          </div>
          <div class="font-bold text-2xl py-2"><%= notice.title %></div>
          <div class=""><%= notice.description%></div>
          <div class="flex justify-center py-4">
            <a
              class="text-blue-500 underline"
              href="/hab/uploads/hostel_files/<%=notice.path %>"
              target="_blank"
              >View Notice</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
